<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answers-errors').html("<%= j message %>")
  <% end %>
<% else %>
  $( '<%= "#answer-#{ @answer.id }" %>' ).replaceWith("<%= j render partial: 'answer', locals: {answer: @answer} %>");
  $('.answers-errors').empty();
<% end %>
