.container-fluid
  .row
    .col-lg-8
      .question-errors
      .question
        = render 'question'
      hr
      .answers-errors
      .answers
        = render @answers
      hr
      - if user_signed_in?
        = form_for [@question, @answer], remote: true do |f|
          .form-group
            = f.label :body, 'Answer'
            = f.text_area :body, class: 'form-control'
          .form-group
            = f.fields_for :attachments do |a|
              = a.label :file
              = a.file_field :file
          = f.submit 'Reply', class: 'btn btn-default'
