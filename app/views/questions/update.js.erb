<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $('.question-errors').html("<%= j message %>")
  <% end %>
<% else %>
  $( '.question' ).html("<%= j render 'question' %>");

  $('.question-errors').empty();

  $('.edit-question-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    $('.edit_question').show();
  });
<% end %>
